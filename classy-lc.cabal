build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library lambda-term-sig
  signatures:          Lambda.Term
  build-depends:       base >=4.9 && <4.11
                     , lens
  hs-source-dirs:      lambda-term-sig

library lambda-var-sig
  signatures:          Lambda.Var
  build-depends:       base >=4.9 && <4.11
                     , lambda-term-sig
                     , lens
  hs-source-dirs:      lambda-var-sig

library lambda-abs-sig
  signatures:          Lambda.Abs
  exposed-modules:     Lambda.Abs.Semantics
  build-depends:       base >=4.9 && <4.11
                     , lambda-term-sig
                     , lambda-var-sig
                     , lens
                     , semantics
  hs-source-dirs:      lambda-abs-sig

library lambda-subst
  exposed-modules:     Lambda.Subst
  build-depends:       base >=4.9 && <4.11
                     , lambda-term-sig
                     , lambda-abs-sig
                     , lambda-var-sig
                     , lens
  hs-source-dirs:      lambda-subst

library lambda-app-sig
  signatures:          Lambda.App
  exposed-modules:     Lambda.App.Semantics.Strict
                     , Lambda.App.Semantics.Lazy
  build-depends:       base >=4.9 && <4.11
                     , lambda-term-sig
                     , lambda-abs-sig
                     , lambda-subst
                     , lens
                     , semantics
  hs-source-dirs:      lambda-app-sig

library semantics
  signatures:          Semantics.BigStep.Sig
  exposed-modules:     Control.MaybeK
                     , Semantics.BigStep
                     , Semantics.Step
  build-depends:       base >=4.9 && <4.11
                     , lambda-term-sig
  hs-source-dirs:      semantics

library
  exposed-modules:     Lambda
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.9 && <4.11
                     , lens
                     , lambda-term-sig
                     , lambda-var-sig
                     , lambda-abs-sig
                     , lambda-app-sig
  hs-source-dirs:      src
  default-language:    Haskell2010
